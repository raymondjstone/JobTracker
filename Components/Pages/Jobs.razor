    private void UseCoverLetterSuggestion()
    {
        if (selectedJobForAI != null && currentCoverLetter != null)
        {
            var fullLetter = $"{currentCoverLetter.OpeningParagraph}\n\n" +
                           $"{string.Join("\n\n", currentCoverLetter.SellingPoints.Select(p => $" {p}"))}\n\n" +
                           $"{currentCoverLetter.ClosingParagraph}";

            selectedJobForAI.CoverLetter = fullLetter;
            JobService.UpdateJobListing(selectedJobForAI);
            showCoverLetterModal = false;
            StateHasChanged();
        }
    }

