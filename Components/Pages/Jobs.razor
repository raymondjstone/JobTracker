    // --- Keyword Highlighting ---
    private string HighlightKeywords(string text)
    {
        if (highlightKeywords.Count == 0 || string.IsNullOrEmpty(text))
            return System.Net.WebUtility.HtmlEncode(text);

        // Escape HTML first
        var encoded = System.Net.WebUtility.HtmlEncode(text);

        // Build regex pattern from keywords (escaped for regex)
        var pattern = string.Join("|", highlightKeywords
            .Select(k => System.Text.RegularExpressions.Regex.Escape(System.Net.WebUtility.HtmlEncode(k))));

        return System.Text.RegularExpressions.Regex.Replace(
            encoded,
            $"({pattern})",
            "<mark>$1</mark>",
            System.Text.RegularExpressions.RegexOptions.IgnoreCase);
    }

