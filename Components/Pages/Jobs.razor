    // --- CSV Export ---
    private async Task ExportToCsv()
    {
        var jobs = JobService.GetAllJobListings()
            .Where(j => j.HasApplied)
            .OrderByDescending(j => j.DateApplied)
            .ToList();

        if (!jobs.Any())
        {
            // Export all filtered jobs if none applied
            jobs = filteredJobs.ToList();
        }

        var csv = new System.Text.StringBuilder();
        csv.AppendLine("Title,Company,Location,Salary,Stage,Date Applied,Date Added,Remote,Source,URL");
        foreach (var job in jobs)
        {
            csv.AppendLine($"{CsvEscape(job.Title)},{CsvEscape(job.Company)},{CsvEscape(job.Location)},{CsvEscape(job.Salary)},{job.ApplicationStage},{job.DateApplied?.ToString("yyyy-MM-dd") ?? ""},{job.DateAdded:yyyy-MM-dd},{job.IsRemote},{CsvEscape(job.Source)},{CsvEscape(job.Url)}");
        }

        var bytes = System.Text.Encoding.UTF8.GetBytes(csv.ToString());
        var base64 = Convert.ToBase64String(bytes);
        await JSRuntime.InvokeVoidAsync("eval", $"(function(){{var a=document.createElement('a');a.href='data:text/csv;base64,{base64}';a.download='jobs-export-{DateTime.Now:yyyy-MM-dd}.csv';document.body.appendChild(a);a.click();document.body.removeChild(a);}})()");
    }

    private static string CsvEscape(string? value)
    {
        if (string.IsNullOrEmpty(value)) return "";
        if (value.Contains(',') || value.Contains('"') || value.Contains('\n'))
            return $"\"{value.Replace("\"", "\"\"")}\"";
        return value;
    }

