@page "/history"
@using JobTracker.Models
@using JobTracker.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject JobHistoryService HistoryService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>History - Job Tracker</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-clock-history"></i> Activity History</h1>
        <div>
            <button class="btn btn-outline-secondary me-2" @onclick="RefreshHistory">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
            <button class="btn btn-outline-danger" @onclick="ShowClearConfirm" disabled="@(totalCount == 0)">
                <i class="bi bi-trash"></i> Clear History
            </button>
        </div>
    </div>

    <!-- Summary Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="mb-0">@totalCount</h3>
                    <small class="text-muted">Total Events</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="mb-0">@(actionCounts.GetValueOrDefault(HistoryActionType.JobAdded))</h3>
                    <small class="text-muted">Jobs Added</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="mb-0">@(actionCounts.GetValueOrDefault(HistoryActionType.DescriptionUpdated))</h3>
                    <small class="text-muted">Descriptions Fetched</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="mb-0">@(sourceCounts.GetValueOrDefault(HistoryChangeSource.Rule))</h3>
                    <small class="text-muted">Rule Actions</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Action Type</label>
                    <select class="form-select" @bind="filterActionType" @bind:after="ApplyFilters">
                        <option value="">All Actions</option>
                        @foreach (var action in Enum.GetValues<HistoryActionType>())
                        {
                            <option value="@action">@GetActionTypeDisplay(action)</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Change Source</label>
                    <select class="form-select" @bind="filterChangeSource" @bind:after="ApplyFilters">
                        <option value="">All Sources</option>
                        @foreach (var source in Enum.GetValues<HistoryChangeSource>())
                        {
                            <option value="@source">@source</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">From Date</label>
                    <input type="date" class="form-control" @bind="filterFromDate" @bind:after="ApplyFilters" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">To Date</label>
                    <input type="date" class="form-control" @bind="filterToDate" @bind:after="ApplyFilters" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" placeholder="Job title, company..."
                           @bind="filterSearchTerm" @bind:event="oninput" @bind:after="ApplyFiltersDebounced" />
                </div>
            </div>
            @if (HasActiveFilters)
            {
                <div class="mt-3">
                    <button class="btn btn-sm btn-outline-secondary" @onclick="ClearFilters">
                        <i class="bi bi-x"></i> Clear Filters
                    </button>
                </div>
            }
        </div>
    </div>

    <!-- History Table -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul"></i> Events (@pagedResult.TotalCount)</h5>
            <div>
                <label class="me-2">
                    <small>Page size:</small>
                    <select class="form-select form-select-sm d-inline-block w-auto ms-1" @bind="pageSize" @bind:after="ApplyFilters">
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </label>
            </div>
        </div>
        <div class="card-body p-0">
            @if (pagedResult.Entries.Count == 0)
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox display-4"></i>
                    <p class="mt-3">No history entries found</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 160px;">Date/Time</th>
                                <th style="width: 130px;">Action</th>
                                <th>Job</th>
                                <th style="width: 100px;">Source</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in pagedResult.Entries)
                            {
                                <tr>
                                    <td>
                                        <small>
                                            @entry.Timestamp.ToString("MMM d, yyyy")<br/>
                                            <span class="text-muted">@entry.Timestamp.ToString("HH:mm:ss")</span>
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge @GetActionBadgeClass(entry.ActionType)">
                                            @GetActionTypeDisplay(entry.ActionType)
                                        </span>
                                    </td>
                                    <td>
                                        @if (entry.JobId != Guid.Empty)
                                        {
                                            @if (!string.IsNullOrEmpty(entry.JobUrl))
                                            {
                                                <a href="@entry.JobUrl" target="_blank" rel="noopener noreferrer">
                                                    <strong>@entry.JobTitle</strong>
                                                </a>
                                            }
                                            else
                                            {
                                                <strong>@entry.JobTitle</strong>
                                            }
                                            @if (!string.IsNullOrEmpty(entry.Company))
                                            {
                                                <br/><small class="text-muted">@entry.Company</small>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">@entry.JobTitle</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetSourceBadgeClass(entry.ChangeSource)">
                                            @entry.ChangeSource
                                        </span>
                                    </td>
                                    <td>
                                        <small>@entry.Details</small>
                                        @if (!string.IsNullOrEmpty(entry.RuleName))
                                        {
                                            <br/><small class="text-info"><i class="bi bi-sliders"></i> @entry.RuleName</small>
                                        }
                                        @if (!string.IsNullOrEmpty(entry.OldValue) && !string.IsNullOrEmpty(entry.NewValue))
                                        {
                                            <br/><small class="text-muted">@entry.OldValue â†’ @entry.NewValue</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (pagedResult.TotalPages > 1)
        {
            <div class="card-footer">
                <nav>
                    <ul class="pagination mb-0 justify-content-center">
                        <li class="page-item @(pagedResult.HasPreviousPage ? "" : "disabled")">
                            <button class="page-link" @onclick="() => GoToPage(1)" disabled="@(!pagedResult.HasPreviousPage)">
                                <i class="bi bi-chevron-double-left"></i>
                            </button>
                        </li>
                        <li class="page-item @(pagedResult.HasPreviousPage ? "" : "disabled")">
                            <button class="page-link" @onclick="() => GoToPage(currentPage - 1)" disabled="@(!pagedResult.HasPreviousPage)">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                        </li>

                        @foreach (var page in GetPageNumbers())
                        {
                            <li class="page-item @(page == currentPage ? "active" : "")">
                                <button class="page-link" @onclick="() => GoToPage(page)">@(page)</button>
                            </li>
                        }

                        <li class="page-item @(pagedResult.HasNextPage ? "" : "disabled")">
                            <button class="page-link" @onclick="() => GoToPage(currentPage + 1)" disabled="@(!pagedResult.HasNextPage)">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </li>
                        <li class="page-item @(pagedResult.HasNextPage ? "" : "disabled")">
                            <button class="page-link" @onclick="() => GoToPage(pagedResult.TotalPages)" disabled="@(!pagedResult.HasNextPage)">
                                <i class="bi bi-chevron-double-right"></i>
                            </button>
                        </li>
                    </ul>
                </nav>
                <div class="text-center mt-2">
                    <small class="text-muted">
                        Showing @((currentPage - 1) * pageSize + 1) - @Math.Min(currentPage * pageSize, pagedResult.TotalCount) of @pagedResult.TotalCount entries
                    </small>
                </div>
            </div>
        }
    </div>
</div>

<!-- Clear Confirmation Modal -->
@if (showClearConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Clear History</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => showClearConfirm = false"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to clear all @totalCount history entries?</p>
                    <p class="text-danger mb-0"><strong>This action cannot be undone.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showClearConfirm = false">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ClearHistory">Clear All History</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PagedHistoryResult pagedResult = new();
    private Dictionary<HistoryActionType, int> actionCounts = new();
    private Dictionary<HistoryChangeSource, int> sourceCounts = new();
    private int totalCount = 0;

    private int currentPage = 1;
    private int pageSize = 50;

    // Filters
    private string filterActionType = "";
    private string filterChangeSource = "";
    private DateTime? filterFromDate;
    private DateTime? filterToDate;
    private string filterSearchTerm = "";

    private bool showClearConfirm = false;
    private System.Timers.Timer? debounceTimer;
    private System.Threading.Timer? refreshTimer;

    private bool HasActiveFilters => !string.IsNullOrEmpty(filterActionType) ||
                                      !string.IsNullOrEmpty(filterChangeSource) ||
                                      filterFromDate.HasValue ||
                                      filterToDate.HasValue ||
                                      !string.IsNullOrEmpty(filterSearchTerm);

    protected override void OnInitialized()
    {
        LoadHistory();
        HistoryService.OnChange += OnHistoryChanged;
        
        // Auto-refresh every 5 seconds to pick up new history entries
        refreshTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                LoadHistory();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(5), TimeSpan.FromSeconds(5));
    }

    private async void OnHistoryChanged()
    {
        await InvokeAsync(() =>
        {
            LoadHistory();
            StateHasChanged();
        });
    }

    private void LoadHistory()
    {
        HistoryService.ForceReload(); // Force reload from storage
        var filter = BuildFilter();
        pagedResult = HistoryService.GetHistory(filter, currentPage, pageSize);
        actionCounts = HistoryService.GetActionTypeCounts();
        sourceCounts = HistoryService.GetChangeSourceCounts();
        totalCount = HistoryService.GetTotalCount();
    }

    private JobHistoryFilter? BuildFilter()
    {
        if (!HasActiveFilters) return null;

        return new JobHistoryFilter
        {
            ActionType = string.IsNullOrEmpty(filterActionType) ? null : Enum.Parse<HistoryActionType>(filterActionType),
            ChangeSource = string.IsNullOrEmpty(filterChangeSource) ? null : Enum.Parse<HistoryChangeSource>(filterChangeSource),
            FromDate = filterFromDate,
            ToDate = filterToDate,
            SearchTerm = filterSearchTerm
        };
    }

    private void ApplyFilters()
    {
        currentPage = 1;
        LoadHistory();
    }

    private void ApplyFiltersDebounced()
    {
        debounceTimer?.Stop();
        debounceTimer?.Dispose();
        debounceTimer = new System.Timers.Timer(300);
        debounceTimer.Elapsed += (s, e) =>
        {
            debounceTimer?.Stop();
            InvokeAsync(() =>
            {
                ApplyFilters();
                StateHasChanged();
            });
        };
        debounceTimer.Start();
    }

    private void ClearFilters()
    {
        filterActionType = "";
        filterChangeSource = "";
        filterFromDate = null;
        filterToDate = null;
        filterSearchTerm = "";
        ApplyFilters();
    }

    private void RefreshHistory()
    {
        LoadHistory();
    }

    private void GoToPage(int page)
    {
        if (page >= 1 && page <= pagedResult.TotalPages)
        {
            currentPage = page;
            LoadHistory();
        }
    }

    private IEnumerable<int> GetPageNumbers()
    {
        var start = Math.Max(1, currentPage - 2);
        var end = Math.Min(pagedResult.TotalPages, currentPage + 2);

        // Ensure we always show 5 pages if possible
        if (end - start < 4)
        {
            if (start == 1)
                end = Math.Min(5, pagedResult.TotalPages);
            else if (end == pagedResult.TotalPages)
                start = Math.Max(1, pagedResult.TotalPages - 4);
        }

        return Enumerable.Range(start, end - start + 1);
    }

    private void ShowClearConfirm()
    {
        showClearConfirm = true;
    }

    private void ClearHistory()
    {
        HistoryService.ClearHistory();
        showClearConfirm = false;
        LoadHistory();
    }

    private string GetActionTypeDisplay(HistoryActionType action)
    {
        return action switch
        {
            HistoryActionType.JobAdded => "Job Added",
            HistoryActionType.JobDeleted => "Job Deleted",
            HistoryActionType.DescriptionUpdated => "Description",
            HistoryActionType.InterestChanged => "Interest",
            HistoryActionType.SuitabilityChanged => "Suitability",
            HistoryActionType.AppliedStatusChanged => "Applied",
            HistoryActionType.ApplicationStageChanged => "Stage",
            HistoryActionType.TitleUpdated => "Title",
            HistoryActionType.CompanyUpdated => "Company",
            HistoryActionType.LocationUpdated => "Location",
            HistoryActionType.SalaryUpdated => "Salary",
            HistoryActionType.NotesUpdated => "Notes",
            HistoryActionType.SkillsUpdated => "Skills",
            HistoryActionType.BulkImport => "Bulk Import",
            HistoryActionType.DuplicateRemoved => "Duplicate Removed",
            _ => action.ToString()
        };
    }

    private string GetActionBadgeClass(HistoryActionType action)
    {
        return action switch
        {
            HistoryActionType.JobAdded => "bg-success",
            HistoryActionType.JobDeleted => "bg-danger",
            HistoryActionType.DescriptionUpdated => "bg-info",
            HistoryActionType.InterestChanged => "bg-primary",
            HistoryActionType.SuitabilityChanged => "bg-warning text-dark",
            HistoryActionType.AppliedStatusChanged => "bg-success",
            HistoryActionType.ApplicationStageChanged => "bg-secondary",
            HistoryActionType.BulkImport => "bg-info",
            HistoryActionType.DuplicateRemoved => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetSourceBadgeClass(HistoryChangeSource source)
    {
        return source switch
        {
            HistoryChangeSource.Manual => "bg-primary",
            HistoryChangeSource.Rule => "bg-warning text-dark",
            HistoryChangeSource.AutoFetch => "bg-info",
            HistoryChangeSource.BrowserExtension => "bg-success",
            HistoryChangeSource.Import => "bg-secondary",
            HistoryChangeSource.System => "bg-dark",
            _ => "bg-secondary"
        };
    }

    public void Dispose()
    {
        HistoryService.OnChange -= OnHistoryChanged;
        debounceTimer?.Dispose();
        refreshTimer?.Dispose();
    }
}
