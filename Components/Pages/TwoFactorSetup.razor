@page "/two-factor-setup"
@using JobTracker.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor
@rendermode InteractiveServer

<PageTitle>Two-Factor Authentication - Job Tracker</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Two-Factor Authentication</h4>
                </div>
                <div class="card-body">
                    @if (user == null)
                    {
                        <p>Loading...</p>
                    }
                    else if (user.TwoFactorEnabled)
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-shield-check"></i>
                            <strong>2FA is enabled</strong> - Your account is protected with two-factor authentication.
                        </div>

                        <p>Would you like to disable two-factor authentication?</p>

                        <button class="btn btn-danger" @onclick="DisableTwoFactor">
                            Disable 2FA
                        </button>
                    }
                    else if (!string.IsNullOrEmpty(setupSecret))
                    {
                        <div class="alert alert-info">
                            <strong>Step 1:</strong> Scan the QR code below with your authenticator app (Google Authenticator, Authy, etc.)
                        </div>

                        <div class="text-center my-4">
                            <div class="qr-code-container p-3 bg-white d-inline-block rounded border">
                                @* QR code would go here - using a URL that generates QR code *@
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=@Uri.EscapeDataString(setupUri)"
                                     alt="QR Code" style="width: 200px; height: 200px;" />
                            </div>
                        </div>

                        <div class="alert alert-secondary">
                            <strong>Can't scan?</strong> Enter this code manually:
                            <code class="d-block mt-2 p-2 bg-light">@setupSecret</code>
                        </div>

                        <hr />

                        <div class="alert alert-info">
                            <strong>Step 2:</strong> Enter the 6-digit code from your authenticator app to verify setup.
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">@errorMessage</div>
                        }

                        <EditForm Model="verifyModel" OnValidSubmit="VerifyAndEnable" FormName="verify-2fa">
                            <div class="mb-3">
                                <label for="code" class="form-label">Verification Code</label>
                                <InputText id="code" @bind-Value="verifyModel.Code" class="form-control text-center"
                                           style="font-size: 1.5rem; letter-spacing: 0.5rem; max-width: 200px;"
                                           placeholder="000000" maxlength="6" />
                            </div>

                            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span>Verifying...</span>
                                }
                                else
                                {
                                    <span>Enable 2FA</span>
                                }
                            </button>
                            <button type="button" class="btn btn-outline-secondary ms-2" @onclick="CancelSetup">
                                Cancel
                            </button>
                        </EditForm>
                    }
                    else
                    {
                        <p>
                            Two-factor authentication adds an extra layer of security to your account by requiring
                            a code from your phone in addition to your password.
                        </p>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Before enabling:</strong> Make sure you have an authenticator app installed on your phone
                            (Google Authenticator, Authy, Microsoft Authenticator, etc.)
                        </div>

                        <button class="btn btn-primary" @onclick="StartSetup">
                            <i class="bi bi-shield-plus"></i> Set Up 2FA
                        </button>
                    }

                    <hr class="my-4" />
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Jobs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private JobTracker.Models.User? user;
    private string? setupSecret;
    private string? setupUri;
    private string? errorMessage;
    private bool isLoading;

    [SupplyParameterFromForm]
    private VerifyModel verifyModel { get; set; } = new();

    protected override void OnInitialized()
    {
        var userId = AuthService.GetUserId(HttpContextAccessor.HttpContext?.User);
        if (userId.HasValue)
        {
            user = AuthService.GetUserById(userId.Value);
        }
    }

    private void StartSetup()
    {
        if (user == null) return;

        setupSecret = AuthService.GenerateTwoFactorSecret(user.Id);
        // Reload user to get the updated secret
        user = AuthService.GetUserById(user.Id);
        if (user != null)
        {
            setupUri = AuthService.GetTwoFactorSetupUri(user);
        }
    }

    private void CancelSetup()
    {
        setupSecret = null;
        setupUri = null;
        errorMessage = null;
        verifyModel = new();
    }

    private void VerifyAndEnable()
    {
        if (user == null) return;

        isLoading = true;
        errorMessage = null;

        try
        {
            // Remove any spaces from the code
            var code = verifyModel.Code?.Replace(" ", "") ?? "";

            if (code.Length != 6 || !code.All(char.IsDigit))
            {
                errorMessage = "Please enter a valid 6-digit code.";
                return;
            }

            var success = AuthService.EnableTwoFactor(user.Id, code);
            if (!success)
            {
                errorMessage = "Invalid code. Please check your authenticator app and try again.";
                return;
            }

            // Reload user to reflect enabled state
            user = AuthService.GetUserById(user.Id);
            setupSecret = null;
            setupUri = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void DisableTwoFactor()
    {
        if (user == null) return;

        AuthService.DisableTwoFactor(user.Id);
        user = AuthService.GetUserById(user.Id);
    }

    private class VerifyModel
    {
        public string Code { get; set; } = string.Empty;
    }
}
